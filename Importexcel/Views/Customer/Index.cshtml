@model response
<style>
    #popup_bg, #popup_bg2 {
        position: fixed;
        top: 0;
        left: 0;
        background-color: rgba(0, 0,0, 0.7);
        width: 100%;
        height: 100%;
        display: none;
    }

    #popup_main_div, #popup_main_div2 {
        position: fixed;
        width: 800px;
        height: 400px;
        border-radius: 5px;
        background-color: white;
        left: 50%;
        margin-left: -400px;
        top: 50%;
        margin-top: -250px;
        box-sizing: border-box;
    }

    #close_popup_div {
        position: absolute;
        text-align: center;
        right: 20px;
        top: 1px;
        cursor: pointer;
        text-decoration: none;
        color: white;
    }

    .button {
        background-color: white;
        float: left;
        border: none;
        font-size: 15px;
        text-align: center;
        margin-top: 280px;
    }

    #label {
        background-color: white;
        text-align: center;
        border: none;
        margin-top: 310px;
        font-size: 15px;
        margin-left: 60px;
    }

    #myFileInput {
        display: none;
    }

    .button:hover, #label:hover {
        text-decoration: none;
        color: grey;
        opacity: 0.5;
    }

    #header {
        text-align: center;
        font-family: sans-serif;
        font-size: 18px;
        margin-bottom: 10px;
        background-color: rgb(77, 77, 236);
        padding-top: 10px;
        padding-bottom: 5px;
        padding-left: 30px;
        margin-top: 0;
        border-top-left-radius: 2px;
        border-top-right-radius: 2px;
        text-align: left;
        text-decoration: none;
        color: white;
    }
</style>

<img src="https://image.flaticon.com/icons/svg/151/151901.svg"
     alt="wtf is dit" style="width:10px;height:10px;" onclick="openPopupMenu()">
<div id="popup_bg">
    <div id="popup_main_div">
        <p id="header">
            Import Tool Test
        </p>
        <form method="post" enctype="multipart/form-data"  asp-controller="Customer" asp-action="Post">
            <div class="form-group">
                <div class="col-md-10">
                    <div class="col-md-10">
                        <label>Upload status: @Model.answer</label>
                    </div>
                    <button class="button" onclick="Bestand()">
                        Bestand Kiezen
                    </button>
                    <input id="myFileInput" type="file" name="files" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10"></div>
                <input id="label" type="submit" value="upload" onclick="closeandopen()" />
            </div>
        </form>
        <div id="close_popup_div" title="close this popup menu" onclick="closePopupMenu()">
            <p>
                x
            </p>
        </div>
    </div>
</div>


<script type="text/javascript">
    var popupDiv = document.getElementById("popup_bg");
    var popupDiv2 = document.getElementById("popup_bg2");
    var popupDiv3 = document.getElementById("popup_bg3");
    var importeren = document.getElementById("button-center2");

    function openPopupMenu() {
        popupDiv.style.display = "block";
    }
    function openPopupMenu2() {
        popupDiv3.style.display = "block";
        popupDiv2.style.display = "none";
        setTimeout(function () { location.reload(); }, 3000);
    }
    function Bestand() {
        document.getElementById('myFileInput').click()
        var file = form.file.value;
        var clicked = true;
    }

    function validation() {
        var fileinput = document.getElementById("myFileInput");
        var filepath = fileinput.value;
        console.log(filepath);
        var allowedextensions = /(\.jpg)$/i;
        if (!allowedextensions.exec(filepath)) {
            alert('Please upload a valid file');
            fileinput.Value = '';
            return false;
        } else {
            document.getElementById("button-center2").disabled = false;
            document.getElementById("button-center2").title = "Upload hier u excel template";
        }
    }

    function closePopupMenu() {
        popupDiv.style.display = "none";
        popupDiv2.style.display = "none";
        document.getElementById("button-center2").disabled = true;
    }

    function closeandopen() {
        popupDiv2.style.display = "block"
        popupDiv.style.display = "none";
    }

    if (isAdvancedUpload) {

        var droppedFiles = false;

        $form.on('drag dragstart dragend dragover dragenter dragleave drop', function (e) {
            e.preventDefault();
            e.stopPropagation();
        })
            .on('dragover dragenter', function () {
                $form.addClass('is-dragover');
            })
            .on('dragleave dragend drop', function () {
                $form.removeClass('is-dragover');
            })
            .on('drop', function (e) {
                droppedFiles = e.originalEvent.dataTransfer.files;
            });

    }
</script>
